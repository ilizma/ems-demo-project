<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_screen_loading_sfl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dashboard_screen_widget_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontal_margin"
                android:layout_marginVertical="@dimen/vertical_margin"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dashboard_screen_loading_title_width_1"
                    android:layout_height="@dimen/dashboard_screen_loading_title_height"
                    android:background="@color/grey" />

                <View
                    android:layout_width="@dimen/dashboard_screen_loading_subtitle_width_1"
                    android:layout_height="@dimen/dashboard_screen_loading_subtitle_height"
                    android:layout_marginTop="@dimen/dashboard_screen_loading_subtitle_top_margin"
                    android:background="@color/grey" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dashboard_screen_widget_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontal_margin"
                android:layout_marginVertical="@dimen/vertical_margin"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dashboard_screen_loading_title_width_2"
                    android:layout_height="@dimen/dashboard_screen_loading_title_height"
                    android:background="@color/grey" />

                <View
                    android:layout_width="@dimen/dashboard_screen_loading_subtitle_width_2"
                    android:layout_height="@dimen/dashboard_screen_loading_subtitle_height"
                    android:layout_marginTop="@dimen/dashboard_screen_loading_subtitle_top_margin"
                    android:background="@color/grey" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dashboard_screen_widget_margin">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontal_margin"
                android:layout_marginVertical="@dimen/vertical_margin"
                android:orientation="vertical">

                <View
                    android:id="@+id/dashboard_screen_loading_tv_solar_power_title"
                    android:layout_width="@dimen/dashboard_screen_loading_title_width_1"
                    android:layout_height="@dimen/dashboard_screen_loading_title_height"
                    android:background="@color/grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/dashboard_screen_loading_tv_solar_power"
                    android:layout_width="@dimen/dashboard_screen_loading_subtitle_width_1"
                    android:layout_height="@dimen/dashboard_screen_loading_subtitle_height"
                    android:layout_marginStart="@dimen/dashboard_screen_widget_text_margin_start"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@+id/dashboard_screen_loading_tv_solar_power_title"
                    app:layout_constraintStart_toEndOf="@+id/dashboard_screen_loading_tv_solar_power_title"
                    app:layout_constraintTop_toTopOf="@+id/dashboard_screen_loading_tv_solar_power_title" />

                <View
                    android:id="@+id/dashboard_screen_loading_tv_quasars_power_title"
                    android:layout_width="@dimen/dashboard_screen_loading_title_width_2"
                    android:layout_height="@dimen/dashboard_screen_loading_title_height"
                    android:layout_marginTop="@dimen/dashboard_screen_loading_subtitle_top_margin"
                    android:background="@color/grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dashboard_screen_loading_tv_solar_power_title" />

                <View
                    android:id="@+id/dashboard_screen_loading_tv_quasars_power"
                    android:layout_width="@dimen/dashboard_screen_loading_subtitle_width_2"
                    android:layout_height="@dimen/dashboard_screen_loading_subtitle_height"
                    android:layout_marginStart="@dimen/dashboard_screen_widget_text_margin_start"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@+id/dashboard_screen_loading_tv_quasars_power_title"
                    app:layout_constraintStart_toEndOf="@+id/dashboard_screen_loading_tv_quasars_power_title"
                    app:layout_constraintTop_toTopOf="@+id/dashboard_screen_loading_tv_quasars_power_title" />

                <View
                    android:id="@+id/dashboard_screen_loading_tv_grid_power_title"
                    android:layout_width="@dimen/dashboard_screen_loading_title_width_1"
                    android:layout_height="@dimen/dashboard_screen_loading_title_height"
                    android:layout_marginTop="@dimen/dashboard_screen_loading_subtitle_top_margin"
                    android:background="@color/grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dashboard_screen_loading_tv_quasars_power_title" />

                <View
                    android:id="@+id/dashboard_screen_loading_tv_grid_power"
                    android:layout_width="@dimen/dashboard_screen_loading_subtitle_width_2"
                    android:layout_height="@dimen/dashboard_screen_loading_subtitle_height"
                    android:layout_marginStart="@dimen/dashboard_screen_widget_text_margin_start"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@+id/dashboard_screen_loading_tv_grid_power_title"
                    app:layout_constraintStart_toEndOf="@+id/dashboard_screen_loading_tv_grid_power_title"
                    app:layout_constraintTop_toTopOf="@+id/dashboard_screen_loading_tv_grid_power_title" />

                <View
                    android:id="@+id/dashboard_screen_loading_tv_building_demand_title"
                    android:layout_width="@dimen/dashboard_screen_loading_title_width_2"
                    android:layout_height="@dimen/dashboard_screen_loading_title_height"
                    android:layout_marginTop="@dimen/dashboard_screen_loading_subtitle_top_margin"
                    android:background="@color/grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dashboard_screen_loading_tv_grid_power_title" />

                <View
                    android:id="@+id/dashboard_screen_loading_tv_building_demand"
                    android:layout_width="@dimen/dashboard_screen_loading_subtitle_width_1"
                    android:layout_height="@dimen/dashboard_screen_loading_subtitle_height"
                    android:layout_marginStart="@dimen/dashboard_screen_widget_text_margin_start"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@+id/dashboard_screen_loading_tv_building_demand_title"
                    app:layout_constraintStart_toEndOf="@+id/dashboard_screen_loading_tv_building_demand_title"
                    app:layout_constraintTop_toTopOf="@+id/dashboard_screen_loading_tv_building_demand_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dashboard_screen_loading_cv_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dashboard_screen_widget_margin"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontal_margin"
                android:layout_marginVertical="@dimen/vertical_margin"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dashboard_screen_loading_title_width_2"
                    android:layout_height="@dimen/dashboard_screen_loading_title_height"
                    android:background="@color/grey" />

                <View
                    android:layout_width="@dimen/dashboard_screen_loading_subtitle_width_2"
                    android:layout_height="@dimen/dashboard_screen_loading_subtitle_height"
                    android:layout_marginTop="@dimen/dashboard_screen_loading_subtitle_top_margin"
                    android:background="@color/grey" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>